package assets

templ CSS() {
	<style>
		/* General font styles */
		* {
			font-family: "Poppins", sans-serif;
		}

		.dancing-script {
			font-family: "Dancing Script", cursive;
		}

		.josefin-slab {
			font-family: "Josefin Slab", serif;
		}

		/* Link styles */
		.bg-white a {
			color: #333;
		}

		/* Active navigation link */
		.nav-link.active {
			color: #ec4899;
		}

		.category.active {
			color: #ec4899;
		}

		/* Header shadow effect on scroll */
		#header {
			transition: background-color 0.3s, box-shadow 0.3s;
		}
	</style>
}
