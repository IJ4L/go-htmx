package partials

templ HeroTemp(title string) {
	<section class="relative">
		<img class="w-full hidden xl:inline" src="http://localhost:8080/images/bread.svg" alt="bread.svg"/>
		<div
			class="xl:absolute bg-pink-100 xl:bg-transparent py-10 xl:top-1/2 xl:left-1/2 xl:transform xl:-translate-x-1/2 xl:-translate-y-1/2 xl:mt-10 mt-20 text-center"
		>
			<h1 class="text-4xl md:text-5xl font-bold dancing-script">Menu { title }</h1>
			<p class="text-md mt-2 md:text-lg">Beranda > { title }</p>
		</div>
	</section>
}
